    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-slot": "^1.2.3",
    "@tiptap/extension-text-align": "^3.10.1",
    "@tiptap/extension-underline": "^3.10.1",
    "@tiptap/react": "^3.10.1",
    "@tiptap/starter-kit": "^3.10.1",
    "@vercel/speed-insights": "^1.2.0",
    "bcrypt": "^6.0.0",
