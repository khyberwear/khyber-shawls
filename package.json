{
  "name": "khybershawls-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "postbuild": "next-sitemap && node scripts/auto-index.js",
    "start": "next start -p ${PORT:-3000}",
    "lint": "eslint",
    "postinstall": "npx prisma generate",
    "prisma:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "seo:index": "node scripts/auto-index.js",
    "pages:dev": "wrangler pages dev .next --d1=DB:khyber-shawls-db --port=3000",
    "pages:deploy": "npm run build && wrangler pages deploy .next --project-name=khyber-shawls"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.985.0",
