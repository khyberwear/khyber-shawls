    "lucide-react": "^0.546.0",
    "next": "^16.1.0",
    "nextjs-toploader": "^3.9.17",
    "nodemailer": "^6.9.8",
    "pg": "^8.18.0",
    "postgres": "^3.4.7",
    "react": "19.2.0",
