generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id             String         @id @default(cuid())
  email          String         @unique
  name           String?
  password       String
  role           String         @default("user")
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  blogPosts      BlogPost[]     @relation("UserBlogPosts")
  contactEntries ContactEntry[]

  @@map("users")
}

model ContactEntry {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  userId    String?
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])

  @@index([userId], map: "contact_entries_userId_idx")
  @@map("contact_entries")
}

model Category {
  id               String    @id @default(cuid())
  name             String    @unique
  slug             String    @unique
  summary          String?
  featuredImageUrl String?
  featuredImageAlt String?
  seoTitle         String?
  seoDescription   String?
  intro            String?   // JSON
  sections         String?   // JSON
  uiConfig         String?   // JSON
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  products         Product[]

  @@map("categories")
}

model Product {
  id               String             @id @default(cuid())
  name             String
  description      String
  details          String?
  careInstructions String?
  price            Float
  image            String
  categoryId       String
  inStock          Boolean            @default(true)
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  published        Boolean            @default(false)
  slug             String             @unique
  orderItems       OrderItem[]
  product_images   product_images[]
  product_variants product_variants[]
  category         Category           @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  
  // Implicit Many-to-Many Relations (Much cleaner in SQL)
  relatedProducts  Product[]          @relation("RelatedProducts")
  relatedTo        Product[]          @relation("RelatedProducts")
  
  tags             Tag[]              @relation("ProductTags")

  @@index([categoryId], map: "products_categoryId_idx")
  @@map("products")
}

model Customer {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  phone     String?
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("customers")
}

model Order {
  id              String      @id @default(cuid())
  userId          String?
  customerName    String
  customerEmail   String
  customerPhone   String?
  shippingAddress String
  notes           String?
  total           Float
  status          OrderStatus @default(PENDING)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  items           OrderItem[]
}

model OrderItem {
  id        String   @id @default(cuid())
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId   String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
  quantity  Int      @default(1)
  price     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("order_items")
}

model Tag {
  id       String    @id @default(cuid())
  name     String    @unique
  products Product[] @relation("ProductTags")
}

model BlogPost {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  excerpt   String?
  content   String
  published Boolean  @default(false)
  authorId  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  image     String?
  author    User?    @relation("UserBlogPosts", fields: [authorId], references: [id])

  @@index([authorId], map: "blog_post_authorId_idx")
  @@map("blog_post")
}

model Media {
  id        String      @id @default(cuid())
  url       String
  alt       String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  heroes    HeroMedia[]

  @@map("media")
}

model HeroMedia {
  id                String   @id @default(cuid())
  key               String   @unique
  title             String?
  subtitle          String?
  description       String?
  ctaLabel          String?
  ctaHref           String?
  backgroundImageId String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  backgroundImage   Media?   @relation(fields: [backgroundImageId], references: [id])

  @@index([backgroundImageId], map: "hero_media_backgroundImageId_idx")
  @@map("hero_media")
}

model Settings {
  id                String  @id @default(cuid())
  websiteName       String?
  websiteLogoUrl    String?
  websiteFaviconUrl String?
  contactPhone      String?
  contactEmail      String?
  contactAddress    String?
  smtpHost          String?
  smtpPort          Int?
  smtpUser          String?
  smtpPass          String?
  stripePublicKey   String?
  stripeSecretKey   String?
  socialLinks       String?

  @@map("settings")
}

model product_images {
  id        String   @id @default(cuid())
  url       String
  alt       String?
  productId String
  position  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime
  products  Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId], map: "product_images_productId_idx")
}

model product_variants {
  id        String   @id @default(cuid())
  name      String
  sku       String   @unique
  price     Float?
  inventory Int      @default(0)
  productId String
  createdAt DateTime @default(now())
  updatedAt DateTime
  products  Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId], map: "product_variants_productId_idx")
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}
